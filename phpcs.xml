<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PHPCS configuration file.</description>
    <rule ref="PSR2"/>

    <file>src</file>
    <file>tests</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>

    <arg name="report" value="summary"/>
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>
